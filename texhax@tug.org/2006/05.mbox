    \pagebreak
}
\newcommand{\backpage}{
    \begin{center}
    \includegraphics[angle=90,width=\textwidth]{hassam3.jpg}
    \end{center}
    \clearpage
}
\begin{document}

\frontpage
\frontpage
\backpage
\backpage
