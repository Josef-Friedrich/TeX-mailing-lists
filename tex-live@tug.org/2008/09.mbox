wget -b -r -l2 "$archive" --no-parent \
    --accept=index.html \
    --reject=\*.{alpha,amd64,doc,hppa,i386,mips,powerpc,sparc,universal,win32,x86,source}\* \
    --accept=\*.tar.lzma 
    "$archive"
## mirror the binary packages
wget -b -r -l2 "$archive" --no-parent \
    --accept=index.html \
    --accept=\*.{x86_64-linux,win32}.tar.lzma \
    "$archive"
## at last, mirror the doc packages
wget -b -r -l2 "$archive" --no-parent \
    --accept=index.html \
    --accept=\*.doc.tar.lzma \
    "$archive"

