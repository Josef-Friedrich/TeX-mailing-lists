--- updmap.pl	Wed Jul 02 02:18:44 2008
+++ updmap.pl	Fri Oct 17 01:04:00 2008
@@ -467,7 +467,7 @@
       if ($value =~ m/^(true|yes|t|y|1)$/) {
 	$value = 1;
       }
-      else {
+      elsif ($value =~ m/^(false|no|f|n|0)$/) {
 	$value = 0;
       }
       last;

