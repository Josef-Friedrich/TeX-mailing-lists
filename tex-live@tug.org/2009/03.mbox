#!/bin/bash
if [ ! -d .svn ]
then
  echo 'Subversion versioning not detected!'
  exit 1
fi
cmd="svn st --no-ignore"
if [ "$1" = "remove" ]
then
  echo 'Removing files'
  for f in `$cmd | awk '/^[I?]/ {print \$2}'`
  do
    if [ -f $f ]
    then
      rm $f
    fi
  done
  for f in `$cmd | awk '/^[I?]/ {print \$2}'`
  do
    if [ -d $f ]
    then
      rm -rf $f
    fi
  done
else
  echo 'Unversioned files:'
  $cmd | awk '/^[I?]/ {print $2}'
fi


