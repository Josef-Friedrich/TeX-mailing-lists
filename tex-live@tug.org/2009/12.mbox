## $Id: Makefile 123 2009-11-27 15:56:46Z zw $
name = anatevopsid

.PHONY: all

.PRECIOUS: ${name}.bbl

all: ${name}.pdf

%.pdf : %.ps
        ps2pdf $< $@

%.ps : %.dvi
        dvips -o $@ $<

%.dvi : %.tex


%.dvi : %.tex %.bbl
        zwlatex $<

%.aux : %.tex
        latex $<

%.bbl : %.aux %.bib
        bibtex $<




