  update-tlmgr-latest.exe@
  update-tlmgr-latest.exe.sha256@
  update-tlmgr-latest.sh@
  update-tlmgr-latest.sh.sha256@
  update-tlmgr-r31673.exe
  update-tlmgr-r31673.exe.sha256
  update-tlmgr-r31674.sh*
  update-tlmgr-r31674.sh.sha256

